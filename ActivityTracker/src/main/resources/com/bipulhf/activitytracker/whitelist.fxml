<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="625.0" prefWidth="811.0" style="-fx-background-color: #E5EAF5;" stylesheets="@application.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bipulhf.activitytracker.WhitelistController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" prefHeight="51.0" prefWidth="275.0" style="-fx-text-fill: #592693;" text="Whitelist">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="65.0" prefHeight="29.0" prefWidth="566.0" style="-fx-font-style: italic;" text="Window title that contains these text are whitelisted">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ListView fx:id="listView" layoutX="14.0" layoutY="146.0" prefHeight="468.0" prefWidth="787.0" style="-fx-background-color: #E5EAF5;" />
      <Button fx:id="deleteButton" layoutX="699.0" layoutY="40.0" mnemonicParsing="false" onAction="#deleteItem" prefHeight="29.0" prefWidth="73.0" style="-fx-background-color: red; -fx-font-weight: bold;" text="Delete" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <TextField fx:id="itemText" layoutX="14.0" layoutY="102.0" onAction="#addItem" prefHeight="29.0" prefWidth="213.0" promptText="Add item in whitelist" />
      <Button fx:id="addButton" layoutX="235.0" layoutY="102.0" mnemonicParsing="false" onAction="#addItem" prefHeight="29.0" prefWidth="54.0" style="-fx-background-color: #592693; -fx-text-fill: white; -fx-font-weight: bold;" text="Add">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
